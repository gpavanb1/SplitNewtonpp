{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "CMake: Configure",
            "type": "shell",
            "command": "cmake",
            "args": [
                "-S",
                ".",
                "-B",
                "build",
                "-DCMAKE_TOOLCHAIN_FILE=/Users/apple/Desktop/Projects/vcpkg/scripts/buildsystems/vcpkg.cmake",
                "-DCMAKE_BUILD_TYPE=Debug"
            ],
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "CMake: Build",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "build"
            ],
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "dependsOn": "CMake: Configure"
        },
        {
            "label": "CMake: Clean",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "build",
                "--target",
                "clean"
            ],
            "problemMatcher": []
        },
        {
            "label": "Run Executable",
            "type": "shell",
            "command": "./build/main", // Replace with your built executable's name and path
            "group": {
                "kind": "test",
                "isDefault": true
            }
        },
        {
            "label": "CMake: Run Tests",
            "type": "shell",
            "command": "ctest",
            "args": [
                "--output-on-failure"
            ],
            "options": {
                "cwd": "${workspaceFolder}/build"
            },
            "problemMatcher": [],
            "group": {
                "kind": "test",
                "isDefault": false
            }
        }
    ]
}